<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title> Quiz Josefe </title>
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head> 

<body>
  <header>
    <h2>Quiz Josefe</h2>
    <p>Preguntas y respuestas</p>
  </header>

  <nav>
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/quizzes">Preguntas</a></li>
    </ul>  
    
  </nav>

  <section>

            <% if (messages.info) { %>
               <article id='flashinfo'>
                 <h3>Información de interés:</h3>
                 <ul>
                    <% for (var i in messages.info) { %>
                      <li> <%= messages.info[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.success) { %>
               <article id='flashsuccess'>
                 <h3>Tareas completadas con éxito:</h3>
                 <ul>
                    <% for (var i in messages.success) { %>
                       <li> <%= messages.success[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>

            <% if (messages.error) { %>
               <article id='flasherror'>
                 <h3>Errores encontrados:</h3>
                 <ul>
                    <% for (var i in messages.error) { %>
                      <li> <%= messages.error[i] %> </li>
                    <% } %>
                 </ul>
               </article>
            <% } %>
       </section>

  <section>
    <div>
      <%- body %>
    </div>
  </section>

  <footer>
    <a href="https://github.com/josefe17/p_Core">
      Quiz Josefe en Github</a>
  </footer>
</body> 
</html>